    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const locationText = document.getElementById('location-text');
        const locations = [
          'Home',
          'Office',
          'Cabin',
          'Holiday',
          'Hike',
          'Farm',
          'Cottage',
          'Beach',
          'Mountain',
          'Family',
          'Camp',
          'Lake',
          'Forest',
          'Park',
          'Town',
          'City',
          'Village',
          'Island',
          'Valley',
          'Ranch',
          'Retreat',
          'Lodge',
          'Villa',
          'Estate',
          'Property',
          'Land',
          'Woods',
          'Trail',
          'Summit',
          'Harbor',
          'Airbnb',
          'Garage',
          'Boat',
          'Equipment',
          'Winery',
          'Greenhouse',
          'Workshop',
          'Shed',
          'Barn',
          'Warehouse',
          'Store',
          'Restaurant',
          'School',
          'Church',
          'Community',
          'Neighborhood',
          'Subdivision',
          'Condo',
          'Apartment',
        ];

        let lastWord = 'Home'; // Track last word to avoid repeats

        function updateText() {
          let randomIndex;
          let newWord;

          // Pick a random word, but not the same as last one
          do {
            randomIndex = Math.floor(Math.random() * locations.length);
            newWord = locations[randomIndex];
          } while (newWord === lastWord && locations.length > 1);

          locationText.textContent = newWord;
          lastWord = newWord;
        }

        // Update every 3 seconds
        setInterval(updateText, 3000);

        // Start with first swap after 1 second
        setTimeout(updateText, 1000);
      });
    </script>
