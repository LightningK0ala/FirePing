# FirePing Environment Configuration

# NASA FIRMS API Key (required for fire detection)
# Get your free API key from: https://firms.modaps.eosdis.nasa.gov/api/
NASA_FIRMS_API_KEY=your_nasa_firms_api_key_here

# VAPID Keys for Web Push Notifications (optional, for production)
# Generate with: node scripts/generate-vapid-keys.js
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@fireping.net

# Application Configuration
APP_NAME=FirePing
APP_URL=http://localhost:4000
APP_ENV=development
PHX_HOST=localhost

# Phoenix Secret Key Base (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=generate_your_secret_key_base_here
PHOENIX_PORT=4000

# PostgreSQL Database Configuration
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_secure_db_password

# Webhook Ed25519 Keys for Signature Generation and Verification
# Generate with: make generate-webhook-keys
WEBHOOK_PRIVATE_KEY=your_webhook_private_key_here
WEBHOOK_PUBLIC_KEY=your_webhook_public_key_here

# Resend API Key for Email Delivery
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email Configuration
FIRE_ALERT_FROM_EMAIL=noreply@fireping.net
GENERAL_FROM_EMAIL=support@fireping.net
SEND_EMAILS=true

# Application Host for Email Links
APP_HOST=http://localhost:4000